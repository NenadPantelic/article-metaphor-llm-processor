<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Define an appender that writes to a file and rolls over based on size -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/metaphor-processor.log</file> <!-- Path to the active log file -->

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/metaphor-processor-%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
            <!-- Maximum size of the active log file before rolling over -->
            <maxFileSize>10MB</maxFileSize>
            <!-- Maximum number of archived log files to keep -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Configure the root logger to use the FILE appender -->
    <root level="INFO">
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>